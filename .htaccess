<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Exclude API path from routing
  RewriteCond %{REQUEST_URI} ^/api/ [NC]
  RewriteRule . - [L]

  # SPA Routing
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.html [L,QSA]
</IfModule>
