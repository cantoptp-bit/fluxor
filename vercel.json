{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"buildCommand": "pnpm install && FLUXER_CONFIG=config/config.test.json pnpm --filter fluxer_app run build:vercel",
	"outputDirectory": "fluxer_app/dist",
	"installCommand": "pnpm install",
	"framework": null,
	"rewrites": [
		{ "source": "/((?!assets/|.*\\.(?:js|css|wasm|ico|png|svg|woff2?|json)$).*)", "destination": "/index.html" }
	],
	"headers": [
		{
			"source": "/assets/(.*)",
			"headers": [
				{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
			]
		}
	]
}
